<h1>Conversation with <%= @recipient.email %></h1>

<% @messages.each do |message| %>
  <div>
    <strong><%= message.sender == current_user ? "You" : message.sender.email %>:</strong>
    <p><%= message.content %></p>
  </div>
<% end %>

<p><%= link_to 'Send Message', new_message_path(recipient_id: @recipient.id) %></p>