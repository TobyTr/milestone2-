<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PC Part Picker</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <h1>Welcome to PC Part Picker</h1>
        <p>Your one-stop platform to build and customize your dream PC.</p>
    </section>

    <!-- Main Content -->

    <main>
        <section class="section">
            <h2>Featured Builds</h2>
                <div class="parts-grid">
                    <% @builds.each do |build| %>
                        <% if build.published == true %>
                            <div class="card">
                                <div class="container">
                                    <h3><%= build.name %></h3>
                                    <p><%= build.description %></p>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
        </section>
        <section class="section">
            <h2>Top Deals</h2>
                <div class="parts-grid">
                    <% @parts.each do |part| %>
                        <div class="card">
                            <div class="container">
                                <h3><%= part.name %></h3>
                                <p>Brand: <%= part.brand %></p>
                                <p>Price: <%= number_to_currency(part.price) %></p>
                                <p>Category: <%= part.category %></p>
                                <p>Year: <%= part.year %></p>
                                <%= link_to "View Details", part_path(part), class: "view-details-button" %>
                            </div>
                        </div>
                    <% end %>
                </div>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <p></p>
    </footer>

    <!-- JavaScript -->
    <script src="script.js"></script>
</body>
</html>
