<h1>Edit <%= @build_item.part.name %></h1>

<%= bootstrap_form_with model: @build_item, method: :patch, url: build_build_item_path(@build, @build_item), data: { turbo: false } do |f| %>
    <%= f.hidden_field :part_id %>
    <%= f.number_field :quantity %>
    <%= f.hidden_field :slot %>
    <%= f.submit %>
<% end %>

<%= link_to 'Back', build_path(@build), class: "btn btn-secondary" %>



