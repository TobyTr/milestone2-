<h1>Your Builds</h1>

<%= link_to 'New Build', new_build_path, class: 'btn btn-secondary' %>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Published</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @builds.each do |build| %>
            <tr>
                <% if build.creator == current_user %>
                    <td><%= build.name %> </td>
                    <td><%= build.description %> </td>
                    <td><%= build.published ? 'Yes' : 'No' %> </td>
                    <td>
                        <%= link_to 'Show', build_path(build), class: "btn btn-sm btn-outline-secondary" %>
                        <%= link_to 'Edit', edit_build_path(build), class: "btn btn-sm btn-outline-secondary" %>
                        <%= button_to 'Delete', build_path(build), method: :delete, data: { turbo: false }, class: 'btn btn-sm btn-outline-secondary', form: { class: 'd-inline' } %>
                    </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

