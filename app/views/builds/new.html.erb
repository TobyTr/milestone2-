<h1>New Build</h1>

<%= bootstrap_form_with model: @build, method: :post, url: builds_path, data: { turbo: false } do |f| %>
    <%= f.text_field :name %>
    <%= f.text_area :description %>
    <%= f.check_box :published %>
    <%= f.submit %>
<% end %>

<%= link_to 'Back', builds_path, class: "btn btn-secondary" %>